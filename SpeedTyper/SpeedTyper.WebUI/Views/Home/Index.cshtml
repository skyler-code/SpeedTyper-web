@model SpeedTyper.WebUI.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome!</h1>
    <h3>Press 'Start Test' to start a typing test!</h3>
    @Html.Action("DisplayTest", "TestTaker")
    @if (Request.IsAuthenticated)
    {
        @Html.Action("ProgressBar", "ProgressBar", new { currentXP = Model.User.CurrentXP, xpToLevel = Model.User.XPToLevel})
    }
</div>